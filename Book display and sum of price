#include "stdio.h"
struct book{
    char bookname [20];
    char author [25];
    float price;
    int pages;
};
int main(){
    struct book b1,b2;
    float total;
    printf("Enter the name of book :");
    scanf("%s",b1.bookname);
    printf("Enter the author name of book :");
    scanf("%s",b1.author);
    printf("Enter the price of book :");
    scanf("%f",&b1.price);
    printf("Enter the pages of book :");
    scanf("%d",&b1.pages);

    printf("Enter the name of book :");
    scanf("%s",b2.bookname);
    printf("Enter the author name of book :");
    scanf("%s",b2.author);
    printf("Enter the price of book :");
    scanf("%f",&b2.price);
    printf("Enter the pages of book :");
    scanf("%d",&b2.pages);

    total=b1.price+b2.price;

    printf("Total price of books : %.2f",total);
}
